{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Material Theme Darker",
    "workbench.sideBar.location": "left",

    "materialTheme.accent": "Teal",

    "window.titleBarStyle": "custom",

    "editor.fontFamily": "Source Code, Menlo, Monaco, Courier New, Monospace",
    "editor.detectIndentation": true,
    "editor.lineHeight": 20,
    "editor.rulers": [80, 127],
    "editor.renderWhitespace": "all",
    "editor.multiCursorModifier": "ctrlCmd",

    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/*.o": true,
        "**/*.so": true,
        "**/.mypy_cache": true
    },

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "security.workspace.trust.untrustedFiles": "open",

    "git.defaultCloneDirectory": "~/git/",

    "amVim.bindCtrlCommands": false,
    "amVim.mimicVimSearchBehavior": false,
    "amVim.useSystemClipboard": true,
    "amVim.startInInsertMode": true,

    "mesonbuild.configureOnOpen": false,

    "python.defaultInterpreterPath": "/usr/bin/python",
    "python.linting.mypyEnabled": true,

    "ruff.importStrategy": "useBundled"
}
