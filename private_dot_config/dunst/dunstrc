    gap_size = 1
    separator_color = "#FFFFFF"

    sort = yes
    idle_threshold = 120

    # Text
    font = CamingoCode Nerd Font Mono 10
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = -1
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    # Icons
