* {
    background-color:   #263238;
    border-color:       #a1b0b8;
    text-color:         #a1b0b8;
    font:               "CamingoCode Nerd Font Mono 11";
}

#window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    7px;
    children:   [ horibox ];
}

#horibox {
    orientation: horizontal;
    children:    [ prompt, entry, listview ];
    spacing:     10px;
}

#listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}

#entry {
    expand:     false;
    width:      10em;
}

#element {
    padding: 0px 2px;
}
#element selected {
    background-color: #7095db;
    text-color:       #263238;
}
